<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="7dp" />
            <stroke android:width="2dip" android:color="@color/colorApplication" />
            <gradient android:angle="-90" android:startColor="@color/searchBarHintColor" android:endColor="@color/searchBarHintColor"  />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="7dp" />
            <stroke android:width="2dip" android:color="@color/colorApplication" />
            <gradient android:angle="-90" android:startColor="@color/white" android:endColor="@color/white" />
        </shape>
    </item>
</selector>