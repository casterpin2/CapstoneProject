<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/notHaveStoreLayout"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/notHaveStoreMessage"
            android:text="@string/doNotHaveStore"
            android:textSize="20dp"
            android:layout_marginBottom="10dp"
            android:textAlignment="center"
            />
        <Button
            android:id="@+id/registerStoreBtn"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/registerStorePageTitle"
            android:background="@drawable/login_button"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/notHaveStoreMessage"
            android:textColor="@color/colorWhite"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"/>
    </RelativeLayout>

</RelativeLayout>