<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:context=".gui.StoreInformationPage"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/notHaveStoreLayout"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_centerInParent="true"
            android:visibility="invisible"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:id="@+id/notHaveStoreMessage"
                android:text="@string/doNotHaveStore"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"
                android:textAlignment="center"
                />
            <Button
                android:id="@+id/registerStoreBtn"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/btn_register"
                android:background="@drawable/login_button"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/notHaveStoreMessage"
                android:textColor="@color/colorWhite"/>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/haveStoreLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/rellay1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/storeImgLayout"
                    android:layout_width="match_parent"
                    android:layout_height="268dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/storeImg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/cover" />
                    <TextView
                        android:id="@+id/storeName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:gravity="center"
                        android:text="Cửa hàng bách hóa số 27"
                        android:textColor="@color/colorWhite"
                        android:textSize="20dp"
                        android:background="#80000000"
                        android:ellipsize="end"
                        android:padding="16dp"/>
                    <ImageButton
                        android:id="@+id/backBtn"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="5dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="32dp"
                        android:adjustViewBounds="true"
                        android:background="@null"
                        android:scaleType="centerInside"
                        android:src="@drawable/btn_back" />
                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rellay1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp">

                    <LinearLayout
                        android:id="@+id/ownerNameLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:weightSum="6">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="5">
                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:src="@drawable/store"
                                    android:layout_marginLeft="16dp"
                                    android:adjustViewBounds="true"
                                    android:scaleType="fitXY"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:layout_weight="1">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/ownerText"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="13dp" />

                                <TextView
                                    android:id="@+id/ownerName"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-light"
                                    android:text="Vu Tung"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="15dp"
                                    android:layout_marginRight="20dp"/>
                            </LinearLayout>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="15dp"
                            android:background="@color/grey" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/addressLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="5">
                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:src="@drawable/address"
                                    android:adjustViewBounds="true"
                                    android:scaleType="fitXY"
                                    android:layout_marginLeft="16dp"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:layout_weight="1">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/addressText"
                                    android:textSize="13dp"
                                    android:textColor="@color/colorPrimaryDark"/>

                                <TextView
                                    android:id="@+id/address"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-light"
                                    android:text="Hà Nội"
                                    android:ellipsize="end"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="15dp"
                                    android:layout_marginRight="20dp"/>
                            </LinearLayout>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="15dp"
                            android:background="@color/grey" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/registerDateLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="5">
                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:src="@drawable/calendar"
                                    android:adjustViewBounds="true"
                                    android:scaleType="fitXY"
                                    android:layout_marginLeft="16dp"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:layout_weight="1">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/registerDateText"
                                    android:textSize="13sp"
                                    android:textColor="@color/colorPrimaryDark"/>

                                <TextView
                                    android:id="@+id/registerDate"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-light"
                                    android:text="21/09/2017"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="15dp"
                                    android:layout_marginRight="20dp"/>
                            </LinearLayout>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="15dp"
                            android:background="@color/grey" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/phoneLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:id="@+id/callLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="5">
                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:src="@drawable/phone"
                                    android:adjustViewBounds="true"
                                    android:scaleType="fitXY"
                                    android:layout_marginLeft="16dp"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:layout_weight="1">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/phoneText"
                                    android:textSize="13sp"
                                    android:textColor="@color/colorPrimaryDark"/>

                                <TextView
                                    android:id="@+id/phoneText"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-light"
                                    android:text="0123456789"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="15dp"
                                    android:layout_marginRight="20dp"/>
                            </LinearLayout>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="15dp"
                            android:background="@color/grey" />
                        <Button
                            android:id="@+id/btnManagerProduct"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Sản phẩm của cửa hàng"
                            android:textColor="@color/colorApplication"
                            android:background="@drawable/border_button"
                            android:layout_marginBottom="16dp"
                            android:layout_marginTop="32dp"/>
                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>
