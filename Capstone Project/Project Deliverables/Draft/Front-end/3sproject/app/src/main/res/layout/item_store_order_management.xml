<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="3"
    android:layout_margin="8dp"
    android:orientation="horizontal"
    android:gravity="center"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvCustomerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vu Sỹ Tùng"
            android:textColor="@color/lb_more"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/tvDeliveryAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:text="Số 120 ngõ gì gì đó ở Hà Nội mà mày không biết tới đâu con chóHà Nội, Việt Nam"
            android:ellipsize="end"
            android:textSize="13sp" />
        <TextView
            android:id="@+id/tvOrderDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:text="13:04, 28/07/2018"
            android:ellipsize="marquee"
            android:textSize="13sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvTotalOrder"
            android:textColor="@color/colorApplication"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_gravity="center"
            android:text="100.000đ"
            android:textSize="15dp" />
        <Button
            android:id="@+id/btnDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chi tiết"
            android:textSize="10dp"
            android:layout_gravity="center"
            android:includeFontPadding="false"
            android:background="@drawable/border_button"
            android:textColor="@color/colorApplication"
            android:layout_marginTop="5dp"/>
    </LinearLayout>

</LinearLayout>