<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <TextView
            android:id="@+id/title_priceDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@color/colorApplication"
            android:textColor="@color/colorWhite"
            android:text="Đặt giá sản phẩm"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:lines="2"
            android:ellipsize="marquee"
            android:textSize="17dp"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/productName_priceDialog"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text=""
        android:lines="2"
        android:ellipsize="marquee"
        android:textSize="15dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/colorBlack"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >



        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                >
                <android.support.design.widget.TextInputEditText
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:hint="Nhập giá của sản phẩm"
                    android:textSize="15dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <android.support.design.widget.TextInputEditText
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:hint="Nhập tỉ lệ giảm giá của sản phẩm"
                    android:textSize="15dp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_gravity="center_horizontal">

                <Button
                    android:id="@+id/addBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/login_button"
                    android:gravity="center_horizontal"
                    android:onClick="addPriceDialog"
                    android:padding="10dp"
                    android:text="Thêm tùy chọn"
                    android:textColor="@color/colorWhite"
                    android:textSize="12dp"
                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>



</LinearLayout>