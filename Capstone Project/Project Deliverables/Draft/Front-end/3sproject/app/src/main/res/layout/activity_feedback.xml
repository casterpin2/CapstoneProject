<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FeedbackActivity">

        <LinearLayout
            android:id="@+id/ln"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--<ImageButton-->
                <!--android:id="@+id/backBtn"-->
                <!--android:layout_width="32dp"-->
                <!--android:layout_height="32dp"-->
                <!--android:layout_marginLeft="-8dp"-->
                <!--android:layout_marginRight="8dp"-->
                <!--android:layout_alignParentLeft="true"-->
                <!--android:layout_alignParentTop="true"-->
                <!--android:adjustViewBounds="true"-->
                <!--android:background="@null"-->
                <!--android:scaleType="fitXY"-->
                <!--android:src="@drawable/btn_back" />-->
            <ImageView
                android:id="@+id/img_cover"
                android:layout_width="match_parent"
                android:layout_height="256dp"
                android:scaleType="fitXY"
                android:src="@drawable/feedback_cover"/>
            <TextView
                android:id="@+id/tv_des"
                android:layout_below="@id/img_cover"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="10"
                android:layout_marginTop="10dp"
                android:textSize="15dp"
                android:text="Bạn có gợi ý hoặc có những đóng góp về dịch vụ của cửa hàng chúng tôi. Vui lòng để lại ý kiến bên dưới"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"/>
            <EditText
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:inputType="textMultiLine"
                android:lines="6"
                android:hint="Nhận xét tại đây..."
                android:minLines="8"
                android:gravity="top|left"
                android:maxLines="50"
                android:scrollbars="vertical"
                android:outlineProvider="none"
                android:layout_below="@id/tv_des"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_margin="8dp">
        <android.support.v7.widget.CardView
            android:id="@+id/cv"
            android:layout_width="match_parent"
            android:layout_height="112dp"
            android:layout_marginBottom="16dp"
            android:layout_alignParentBottom="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IT WAS GOOD"
                android:layout_gravity="center"
                android:textSize="16dp"/>
        </android.support.v7.widget.CardView>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GỬI NHẬN XÉT"
            android:textColor="@color/colorWhite"
            android:background="@drawable/login_button"
            android:layout_alignParentBottom="true"/>
    </LinearLayout>
</RelativeLayout>