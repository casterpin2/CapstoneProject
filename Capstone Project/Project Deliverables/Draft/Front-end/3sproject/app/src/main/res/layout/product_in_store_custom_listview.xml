<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="15dp"
    android:background="@color/colorWhite"
    android:orientation="vertical">
    <!--product avatar-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="120dp">

            <ImageView
                android:id="@+id/productImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/images"
                android:scaleType="centerInside"
                />
        </RelativeLayout>

        <!--product information-->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="3dp">
                <LinearLayout
                    android:id="@+id/productNameLinearLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp">


                    <TextView
                        android:id="@+id/productName"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:maxLines="3"
                        android:ellipsize="end"
                        android:text="Tên sản phẩm"
                        android:textSize="17dp"
                        android:textColor="@color/colorBlack"
                        android:layout_weight="1"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/productLinearLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_below="@+id/productNameLinearLayout"
                    android:layout_marginTop="5dp">
                    <TextView
                        android:id="@+id/categoryText"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:singleLine="true"
                        android:ellipsize="marquee"
                        android:text="Giá"
                        android:textSize="14dp"
                        android:textColor="@color/colorBlack"
                        android:layout_weight="2" />
                    <TextView
                        android:id="@+id/productPrice"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:singleLine="true"
                        android:ellipsize="marquee"
                        android:text="tiền"
                        android:textSize="16dp"
                        android:textColor="@color/colorApplication"
                        android:layout_weight="3"

                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/productBrandLinearLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/productLinearLayout"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/brandText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Chiết khấu"
                        android:textColor="@color/colorBlack"
                        android:textSize="14dp" />
                    <TextView
                        android:id="@+id/productPromotion"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:singleLine="true"
                        android:ellipsize="marquee"
                        android:text="phần trăm"
                        android:textSize="16dp"
                        android:textColor="@color/colorApplication"
                        android:layout_weight="3"
                        />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                >
                <ImageView
                    android:id="@+id/editBtn"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:src="@drawable/edit"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp">
                <ImageView
                    android:id="@+id/deleteBtn"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:src="@drawable/delete"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>