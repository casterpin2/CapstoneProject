<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gui.OrderDetailPage">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/usernameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:text="Tên khách hàng"
            android:textSize="14dp"/>
        <TextView
            android:id="@+id/usernameTV"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="wrap_content"
            android:text="Thắng Nguyễn"
            android:paddingLeft="7dp"
            android:textColor="@color/darkGrey"
            android:textSize="15dp"
            android:maxLines="2"
            android:ellipsize="end"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/phoneNumberLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:paddingRight="10dp"
        android:layout_below="@+id/usernameLayout">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:text="Số điện thoại"
            android:textSize="14dp"
            />
        <TextView
            android:id="@+id/phoneTV"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="wrap_content"
            android:text="0912003174"
            android:paddingLeft="7dp"
            android:textColor="@color/darkGrey"
            android:textSize="15dp"
            android:singleLine="true"
            android:ellipsize="end"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/statusLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:paddingRight="10dp"
        android:layout_below="@+id/phoneNumberLayout">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:text="Trạng thái"
            android:textSize="14dp"
            />
        <TextView
            android:id="@+id/statusTV"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="wrap_content"
            android:text="Đang đợi"
            android:paddingLeft="7dp"
            android:textColor="@color/darkGrey"
            android:textSize="15dp"
            android:singleLine="true"
            android:ellipsize="end"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/totalLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:paddingRight="10dp"
        android:layout_below="@+id/statusLayout">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:text="Giá trị"
            android:textSize="14dp"
            />
        <TextView
            android:id="@+id/totalTV"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="wrap_content"
            android:text="1.200.000 đ"
            android:paddingLeft="7dp"
            android:textColor="@color/darkGrey"
            android:textSize="15dp"
            android:singleLine="true"
            android:ellipsize="end"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/deliveryTimeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:paddingRight="10dp"
        android:layout_below="@+id/totalLayout">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:text="Thời gian giao hàng"
            android:textSize="14dp"
            />
        <TextView
            android:id="@+id/deliveryTimeTV"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="wrap_content"
            android:text="02/02/2018 19:21"
            android:paddingLeft="7dp"
            android:textColor="@color/darkGrey"
            android:textSize="15dp"
            android:singleLine="true"
            android:ellipsize="end"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/deliveryAddressLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:paddingRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/deliveryTimeLayout">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:text="Địa chỉ giao hàng"
            android:textSize="14dp"
            />
        <TextView
            android:id="@+id/deliveryAddressTV"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="wrap_content"
            android:text="Đại học FPT - Thạch Hòa - Thạch Thất - Hà Nội"
            android:paddingLeft="7dp"
            android:textColor="@color/lb_more"
            android:textSize="14dp"
            android:ellipsize="end"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/listViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_below="@+id/deliveryAddressLayout">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text=""/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="wrap_content"
            android:text="Tên sản phẩm"
            android:textAlignment="textStart"
            android:textColor="@color/colorBlack"
            android:paddingLeft="10dp"
            android:textSize="11dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="Số lượng"
            android:textSize="11dp"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"/>
    </LinearLayout>
    <ListView
        android:id="@+id/productListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/listViewTitle"
        android:paddingBottom="45dp"></ListView>


    <RelativeLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="2dp"
        android:layout_alignParentBottom="true"
        >
        <LinearLayout
            android:id="@+id/waittingOrderButtonLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="11">
            <TextView
                android:id="@+id/acceptBtn"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="match_parent"
                android:text="Chấp thuận"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textColor="@color/colorGreen"
                />
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/rejectBtn"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="match_parent"
                android:text="Từ chối"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textColor="@color/colorApplication"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/processingOrderButtonLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/closeBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Đã giao hàng"
                android:textSize="25dp"
                android:textAlignment="center"
                android:textColor="@color/lb_more"
                />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
</RelativeLayout>