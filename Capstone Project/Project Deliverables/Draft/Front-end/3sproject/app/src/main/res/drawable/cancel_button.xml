<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="#ff7675" />
            <gradient android:angle="-90" android:startColor="#ff7675" android:endColor="#ff7675"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="#ff7675" />
            <solid android:color="#ff7675"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="#ff7675" />
            <gradient android:angle="-90" android:startColor="#ff7675" android:endColor="#ff7699" />
        </shape>
    </item>
</selector>