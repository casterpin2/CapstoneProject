<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="#FF4040" />
            <gradient android:angle="-90" android:startColor="#FF4040" android:endColor="#FF4040"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="#FF4040" />
            <solid android:color="#FF4040"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="#FF4040" />
            <gradient android:angle="-90" android:startColor="#FF4040" android:endColor="#FF4060" />
        </shape>
    </item>
</selector>