<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login.LoginPage">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView"
            android:layout_below="@id/appbar">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">
                <RelativeLayout
                    android:id="@+id/test"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true">
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/imageView"
                        android:layout_alignStart="@+id/imageView"
                        android:layout_below="@+id/imageView">
                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/usernameValue"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="@string/login_page_username_placeholder"
                            android:inputType="textAutoComplete"
                            android:singleLine="true"
                            android:textSize="13dp"/>


                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/username"
                        android:layout_alignStart="@+id/username"
                        android:layout_below="@+id/username"
                        app:passwordToggleEnabled="true"
                        >
                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/passwordValue"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="@string/login_page_password_placeholder"
                            android:inputType="textPassword"
                            android:singleLine="true"
                            android:textSize="13dp"/>

                    </android.support.design.widget.TextInputLayout>
                    <TextView android:id="@+id/errorMessage"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_below="@+id/password"
                        android:layout_alignEnd="@+id/username"
                        android:layout_alignStart="@+id/username"
                        android:textColor="@color/colorRed"
                        android:textSize="10dp"/>


                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="match_parent"
                        android:layout_height="170dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="30dp"
                        app:srcCompat="@drawable/applogo"
                        tools:layout_editor_absoluteX="42dp"
                        tools:layout_editor_absoluteY="16dp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/test"
                    android:layout_below="@+id/test"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="0dp">
                    <Button
                        android:id="@+id/loginBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/login_button"
                        android:text="@string/login_page_login3SBtn"
                        android:textColor="@color/colorWhite"
                        android:textSize="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/toForgetPasswordPageBtn"/>
                    <TextView
                        android:id="@+id/toForgetPasswordPageBtn"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="@string/login_page_forgetPassword"
                        android:textColor="@color/colorApplication"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="10dp"/>
                    <LinearLayout
                        android:id="@+id/crossLine"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/loginBtn"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp"
                        >
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="1dp"
                            android:layout_marginTop="15dp"
                            android:background="@color/grey"
                            android:gravity="start"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"
                            android:enabled="false"
                            android:textColor="@color/grey"
                            android:gravity="center_vertical"
                            android:textAlignment="center"
                            android:text="Hoáº·c"
                            android:textSize="12dp" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="1dp"
                            android:layout_marginTop="15dp"
                            android:background="@color/grey"
                            android:gravity="start"/>
                    </LinearLayout>


                    <Button
                        android:id="@+id/loginFBBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/crossLine"
                        android:layout_below="@+id/crossLine"
                        android:layout_marginTop="20dp"
                        android:text="@string/login_page_loginFBBtn"
                        android:textSize="10dp"
                        android:textColor="@color/colorWhite"
                        android:background="@drawable/login_with_facebook_button"/>

                    <Button
                        android:id="@+id/loginGPBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/loginFBBtn"
                        android:layout_below="@+id/loginFBBtn"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/login_with_google_plus_button"
                        android:text="@string/login_page_loginGGBtn"
                        android:textColor="@color/colorWhite"
                        android:textSize="10dp" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_below="@+id/loginGPBtn"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/login_page_nohaveAcc"
                            android:textSize="13dp"/>
                        <TextView
                            android:id="@+id/toRegisterPageBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/register_page_registerTitle"
                            android:textColor="@color/colorApplication"
                            android:textSize="16dp"
                            android:layout_marginLeft="5dp"/>
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>
</RelativeLayout>
