<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <stroke android:width="1dip" android:color="#ff0080" />
            <gradient android:angle="-90" android:startColor="#ff0080" android:endColor="#ff0080"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <stroke android:width="1dip" android:color="#ff0080" />
            <solid android:color="#ff0080"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <stroke android:width="1dip" android:color="#ff0080" />
            <gradient android:angle="-90" android:startColor="#ff0080" android:endColor="#ff0040" />
        </shape>
    </item>
</selector>