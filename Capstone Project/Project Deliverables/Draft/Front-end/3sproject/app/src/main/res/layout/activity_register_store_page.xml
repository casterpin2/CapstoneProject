            <RelativeLayout
                android:id="@+id/cityLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etPhoneLayout"
                android:layout_marginTop="10dp"
                android:background="@color/colorWhite"
                android:padding="10dp">
                <TextView
                    android:id="@+id/cityText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="@string/cityText"
                    android:textSize="11dp"/>
                <TextView
                    android:id="@+id/city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_below="@+id/cityText"
                    android:textSize="14dp"
                    android:textColor="@color/colorBlack"
                    android:layout_marginTop="5dp"/>
                <ImageView
                    android:id="@+id/rightArrowCity"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/right_arrow"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/townLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cityLayout"
                android:layout_marginTop="10dp"
                android:background="@color/colorWhite"
                android:padding="10dp">
                <TextView
                    android:id="@+id/townText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="@string/townText"
                    android:textSize="11dp"/>
                <TextView
                    android:id="@+id/town"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_below="@+id/townText"
                    android:textSize="14dp"
                    android:textColor="@color/colorBlack"
                    android:layout_marginTop="5dp"/>
                <ImageView
                    android:id="@+id/rightArrowTown"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/right_arrow"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/communeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/townLayout"
                android:layout_marginTop="10dp"
                android:background="@color/colorWhite"
                android:padding="10dp">
                <TextView
                    android:id="@+id/communeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="@string/communeText"
                    android:textSize="11dp"/>
                <TextView
                    android:id="@+id/commune"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_below="@+id/communeText"
                    android:textSize="14dp"
                    android:textColor="@color/colorBlack"
                    android:layout_marginTop="5dp"/>
                <ImageView
                    android:id="@+id/rightArrowCommune"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/right_arrow"/>

            </RelativeLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/etDetailAddressLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/communeLayout"
                android:layout_marginTop="10dp">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/etDetailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="@string/addressText"
                    android:textSize="13dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"/>

            </android.support.design.widget.TextInputLayout>
            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etDetailAddressLayout"
                android:layout_marginTop="10dp"
                android:textSize="13dp"
                android:text="@string/locateCurrentLocationText"/>



