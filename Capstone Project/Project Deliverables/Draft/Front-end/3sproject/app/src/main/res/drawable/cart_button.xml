<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <stroke android:width="1dp" android:color="@color/grey" />
            <gradient android:angle="-90" android:startColor="@color/colorApplication" android:endColor="@color/colorApplication"  />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <stroke android:width="1dp" android:color="#a9a9a9" />
            <gradient android:angle="-90" android:startColor="@color/white" android:endColor="@color/white" />
        </shape>
    </item>
</selector>