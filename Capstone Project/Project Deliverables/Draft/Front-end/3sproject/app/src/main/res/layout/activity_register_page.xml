<?xml version="1.0" encoding="UTF-8"?>

    <ScrollView android:id="@+id/scrollView" tools:context="Register.RegisterPage"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


        <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">

            <ImageView
                android:id="@+id/appLogo"
                android:layout_height="200dp"
                android:layout_width="300dp"
                tools:layout_editor_absoluteY="16dp"
                tools:layout_editor_absoluteX="42dp"
                app:srcCompat="@drawable/applogo"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"/>


            <RelativeLayout
                android:id="@+id/initialLayout"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_below="@+id/appLogo"
                android:visibility="visible"
                android:gravity="center">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/usernameText"
                    android:layout_height="50dp"
                    android:layout_width="300dp"
                    android:layout_below="@+id/imageView"
                    android:layout_alignStart="@+id/imageView"
                    android:layout_alignEnd="@+id/imageView">

                    <AutoCompleteTextView
                        android:id="@+id/usernameValue"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:singleLine="true"
                        android:inputType="textPersonName"
                        android:hint="@string/login_page_username_placeholder"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/passwordText"
                    android:layout_height="50dp"
                    android:layout_width="300dp"
                    android:layout_marginTop="15dp"
                    android:layout_below="@+id/usernameText"
                    android:layout_alignStart="@+id/usernameText"
                    android:layout_alignEnd="@+id/imageView">

                    <AutoCompleteTextView
                        android:id="@+id/passwordValue"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:singleLine="true"
                        android:inputType="textPassword"
                        android:hint="@string/login_page_password_placeholder"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/rePasswordText"
                    android:layout_height="50dp"
                    android:layout_width="300dp"
                    android:layout_marginTop="15dp"
                    android:layout_below="@+id/passwordText"
                    android:layout_alignStart="@+id/passwordText">

                    <AutoCompleteTextView
                        android:id="@+id/rePasswordValue"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:singleLine="true"
                        android:inputType="textPassword"
                        android:hint="Nhập lại mật khẩu"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/emailText"
                    android:layout_height="50dp"
                    android:layout_width="300dp"
                    android:layout_marginTop="15dp"
                    android:layout_below="@+id/rePasswordText"
                    android:layout_alignStart="@+id/passwordText">

                        <AutoCompleteTextView
                            android:id="@+id/emailValue"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:singleLine="true"
                            android:inputType="textPassword"
                            android:hint="Thư điện tử"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/phoneText"
                    android:layout_height="50dp"
                    android:layout_width="300dp"
                    android:layout_marginTop="15dp"
                    android:layout_below="@+id/emailText"
                    android:layout_alignStart="@+id/emailText">

                    <AutoCompleteTextView
                        android:id="@+id/phoneValue"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:singleLine="true"
                        android:inputType="textPassword"
                        android:hint="Thư điện tử"/>

                </android.support.design.widget.TextInputLayout>

                <Button
                    android:id="@+id/registerBtn"
                    android:layout_height="40dp"
                    android:layout_width="100dp"
                    android:layout_below="@+id/checkBox"
                    android:layout_alignStart="@+id/usernameText"
                    android:textColor="@color/colorWhite"
                    android:text="Đăng kí"
                    android:background="@drawable/login_button"
                    android:layout_marginBottom="20dp"
                    android:layout_alignParentBottom="true"/>

                <CheckBox
                    android:id="@+id/checkBox"
                    android:layout_height="wrap_content"
                    android:layout_width="300dp"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/phoneText"
                    android:layout_alignStart="@+id/rePasswordText"
                    android:text="Tôi đã đọc và chấp thuận các điều khoản của ứng dụng"/>

                <Button
                    android:id="@+id/cancelBtn"
                    android:layout_height="40dp"
                    android:layout_width="100dp"
                    android:layout_alignEnd="@+id/usernameText"
                    android:textColor="@color/colorWhite"
                    android:text="Hủy"
                    android:background="@drawable/login_button"
                    android:layout_marginBottom="20dp"
                    android:layout_alignParentBottom="true"/>

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>