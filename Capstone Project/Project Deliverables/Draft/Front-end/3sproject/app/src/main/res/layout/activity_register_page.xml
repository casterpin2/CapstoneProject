<?xml version="1.0" encoding="UTF-8"?>

    <ScrollView android:id="@+id/scrollView" tools:context="Register.RegisterPage"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


        <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
            >

            <ImageView
                android:id="@+id/appLogo"
                android:layout_height="170dp"
                android:layout_width="match_parent"
                tools:layout_editor_absoluteY="16dp"
                tools:layout_editor_absoluteX="42dp"
                app:srcCompat="@drawable/applogo"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"/>


            <RelativeLayout
                android:id="@+id/initialLayout"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_below="@+id/appLogo"
                android:visibility="visible"
                android:gravity="center">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/usernameText"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/imageView"
                    android:layout_alignStart="@+id/imageView"
                    android:layout_alignEnd="@+id/imageView">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/usernameValue"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:singleLine="true"
                        android:inputType="textPersonName"
                        android:hint="@string/login_page_username_placeholder"
                        android:textSize="13dp"/>

                </android.support.design.widget.TextInputLayout>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/usernameErrorMessage"
                    android:layout_below="@+id/usernameText"
                    android:textColor="@color/colorRed"
                    android:textSize="10dp"/>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/passwordText"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/usernameErrorMessage"
                    android:layout_alignStart="@+id/usernameText"
                    android:layout_alignEnd="@+id/imageView"
                    app:passwordToggleEnabled="true">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/passwordValue"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:singleLine="true"
                        android:inputType="textPassword"
                        android:hint="@string/login_page_password_placeholder"
                        android:textSize="13dp"/>
                </android.support.design.widget.TextInputLayout>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/passwordErrorMessage"
                    android:layout_below="@+id/passwordText"
                    android:textColor="@color/colorRed"
                    android:textSize="10dp" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/rePasswordText"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/passwordErrorMessage"
                    android:layout_alignStart="@+id/passwordText"
                    app:passwordToggleEnabled="true">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/rePasswordValue"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:singleLine="true"
                        android:inputType="textPassword"
                        android:hint="@string/register_page_repassword_placeholder"
                        android:textSize="13dp"/>

                </android.support.design.widget.TextInputLayout>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/confirmPasswordErrorMessage"
                    android:layout_below="@+id/rePasswordText"
                    android:textColor="@color/colorRed"
                    android:textSize="10dp" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/emailText"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/confirmPasswordErrorMessage"
                    android:layout_alignStart="@+id/passwordText">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/emailValue"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:singleLine="true"
                            android:inputType="textEmailAddress"
                            android:hint="@string/register_page_email_placeholder"
                            android:textSize="13dp"/>

                </android.support.design.widget.TextInputLayout>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/emailErrorMessage"
                    android:layout_below="@+id/emailText"
                    android:textColor="@color/colorRed"
                    android:textSize="10dp" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/phoneText"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/emailErrorMessage"
                    android:layout_alignStart="@+id/emailText">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/phoneValue"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:singleLine="true"
                        android:inputType="number"
                        android:hint="@string/register_page_phone_placeholder"
                        android:textSize="13dp"/>

                </android.support.design.widget.TextInputLayout>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/phoneErrorMessage"
                    android:layout_below="@+id/phoneText"
                    android:textColor="@color/colorRed"
                    android:textSize="10dp" />

                <Button
                    android:id="@+id/registerBtn"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/agreeLinearLayout"
                    android:layout_alignStart="@+id/usernameText"
                    android:textColor="@color/colorWhite"
                    android:text="@string/register_page_registerTitle"
                    android:background="@drawable/login_button"
                    android:layout_marginBottom="20dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"/>
                <LinearLayout
                    android:id="@+id/agreeLinearLayout"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/phoneErrorMessage"
                    >
                    <CheckBox
                        android:id="@+id/checkBox"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_alignStart="@+id/rePasswordText"
                        android:text=""
                        android:layout_gravity="center_vertical"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tôi đã đọc và chấp thuận các "/>
                    <TextView
                        android:id="@+id/toRulePage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="điều khoản"
                        android:textColor="@color/colorPrimaryDark"/>
                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/registerBtn"
                    android:gravity="center_horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/register_page_haveAcc"
                        android:textSize="13dp"/>
                    <TextView
                        android:id="@+id/toLoginPage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/login_page_login3SBtn"
                        android:textColor="@color/colorApplication"
                        android:textSize="15dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="10dp"/>
                </LinearLayout>


        </RelativeLayout>

    </RelativeLayout>

</ScrollView>