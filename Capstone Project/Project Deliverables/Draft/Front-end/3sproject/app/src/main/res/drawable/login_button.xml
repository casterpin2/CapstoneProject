<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="#6c5ce7" />
            <gradient android:angle="-90" android:startColor="#6c5ce7" android:endColor="#6c5ce7"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="#6c5ce7" />
            <solid android:color="#6c5ce7"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="#6c5ce7" />
            <gradient android:angle="-90" android:startColor="#6c5ce7" android:endColor="#6c5c99" />
        </shape>
    </item>
</selector>