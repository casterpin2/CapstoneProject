<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="#00BB00" />
            <gradient android:angle="-90" android:startColor="#00BB00" android:endColor="#00BB00"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="#00BB00" />
            <solid android:color="#00BB00"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="#00BB00" />
            <gradient android:angle="-90" android:startColor="#00BB00" android:endColor="#00BB70" />
        </shape>
    </item>
</selector>