<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <TextView
            android:id="@+id/productName_infoDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@color/colorApplication"
            android:textColor="@color/colorWhite"
            android:text="Product Name"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:lines="2"
            android:ellipsize="marquee"
            android:textSize="17dp"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
        <ImageView
            android:id="@+id/productImage"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            />
        </RelativeLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:orientation="vertical"
        android:layout_weight="2"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            >
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:text="Danh mục"
                android:layout_weight="2"
                android:textSize="13dp"
                />
            <TextView
                android:id="@+id/productCategory_infoDialog"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:text="đasa"
                android:layout_weight="3"
                android:lines="2"
                android:ellipsize="marquee"
                android:textSize="13dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:text="Nhãn hiệu"
                android:layout_weight="2"
                android:textSize="13dp"
                />
            <TextView
                android:id="@+id/productBrand_infoDialog"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:text="đasa"
                android:layout_weight="3"
                android:textSize="13dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:id="@+id/productTypeText_infoDialog"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:text=""
                android:layout_weight="2"
                android:textSize="13dp"
                />
            <TextView
                android:id="@+id/productType_infoDialog"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:textSize="13dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <Button
                android:id="@+id/addBtn_infoDialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/login_button"
                android:gravity="center"
                android:onClick="intentToCartPage"
                android:padding="10dp"
                android:text="Thêm sản phẩm"
                android:textColor="@color/colorWhite"
                android:textSize="12dp" />
        </LinearLayout>
    </LinearLayout>

    </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp">
            <TextView
                android:id="@+id/productDescText_infoDialog"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Mô tả"
                android:textSize="13dp"
                />
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_below="@+id/productDescText_infoDialog"
                android:scrollbars="vertical">
                <TextView
                    android:id="@+id/productDesc_infoDialog"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="13dp"
                    android:text=""
                    android:textColor="@color/colorApplication"
                    android:fadeScrollbars="false"
                    />
            </ScrollView>
        </RelativeLayout>

</LinearLayout>